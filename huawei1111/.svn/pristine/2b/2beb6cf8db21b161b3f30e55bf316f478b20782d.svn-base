@charset "UTF-8";

.naver-main{
    min-width:1200px;
    background-color:#FFF;
}
.naver-layout{
    width: 1200px;
    margin: 0 auto;
}
.naver-main .naver-layout{
    position:relative;
    z-index:410}
.category{
    position: absolute;
    left: 0;
    top: 18px;
    width: 200px;
}
.category .category-list{
    position:relative;
    height:440px;
    box-shadow:0 0 46px rgba(0,0,0,0.03);
    background:rgba(255,255,255,0.95);
    border-radius:10px}
.category-item .category-item-bg{
    padding: 12px 0 13px 0;
    margin: 0;
    margin-left: 25px;
    width: 150px;
    border-bottom: 1px solid rgba(0,0,0,0.06);
    height: 48px;
    position: relative;
}
.category-item .category-item-bg .category-info{
    width: 175px;
    height: 47px;
    overflow: hidden;
}
.category-item .category-item-bg .category-info a{
    color: #a6a6a6;
    margin-right: 10px;
    font-size: 14px;
    display: inline-block;
}
.category-item .category-item-bg .category-info a:hover{
    color: #d3454b;
}
.category .category-panels{
    position: absolute;
    left: 198px;
    height: 416px;
    max-width: 1020px;
    background: #FFF;
    padding: 24px 22px 0 28px;
    border-radius: 0 10px 10px 0;
    box-shadow: 0 0 46px rgba(0,0,0,0.1);
    top: 0;
    z-index: 1;
    overflow: hidden;
}
.category .category-panels .none{display: none;}
.category .category-panels.category-panels-1{width:204px}
.category .category-panels.category-panels-2{width:408px}
.category .category-panels.category-panels-3{width:612px}
.category .category-panels.category-panels-4{width:816px}
.category-panels .lin-list{
    width: 204px;
    margin: 0;
    float: left;;
}
.category-panels .lin-list .lin-list-item{
    float: left;
    margin-bottom: 24px;
}
.lin-list .lin-list-item a{
    display: block;
    width: 204px;
    height: 80px;
    font-size: 14px;
    border-radius: 10px;
    margin-right: 0;
}
.lin-list .lin-list-item a:hover{
    background:#f6f6f6;
}
.lin-list .lin-list-item a img{
    width: 56px;
    height: 56px;
    float: left;
    margin: 12px 8px 0 6px;
}
.lin-list .lin-list-item a span{
    float: left;
    color: #777;
    font-size: 13px;
    margin-top: 30px;
    width: 120px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.lin-list .lin-list-btn a {
    width: 112px;
    height: 42px;
    line-height: 42px;
    margin-top: 18px;
    margin-left: 36px;
    border: 1px solid #f2f2f2;
    border-radius: 0 22px 22px 0;
    font-size: 13px;
    color: #a7a7a7;
    display: block;
    position: relative;
    text-indent: 34px;
}
.lin-list .lin-list-btn a:before{content:"";width:42px;height:42px;background:#fff;border:1px solid #f2f2f2;display:block;border-radius:22px;position:absolute;top:-1px;left:-22px}
.lin-list .lin-list-btn a:after{content:"";width:0;height:0;display:block;border-bottom:5px solid transparent;border-top:5px solid transparent;border-left:5px solid #c0c0c0;position:absolute;top:16px;left:-1px}
.category-item .category-item-bg .category-info h1{
    margin-bottom: 2px;
}
.category-item .category-item-bg .category-info h1 a{
    color: #848484;
    font-size: 16px;
}
.banner-index{
    position:relative;
    height:550px}
.banner-index .mask{
    text-align:center;
    width:100%;
    min-width:1200px;
    height:72px;
    display:block;
    position:absolute;
    bottom:0;
    z-index:1}
.banner-index .mask span{
    width:100%;
    min-width:1200px;
    height:72px;
    display:block;
    background:url("../images/bg-slide.png") no-repeat;
    background-size:100% 72px}
.banner-index .ec-slider{
    height:550px!important}
.banner-index .ec-slider>ul{
    width:100%;
    position:absolute;
    height:550px!important}
.banner-index .ec-slider>ul li{
    height:550px!important}
.banner-index .index-slider-img{
    display: none;
    float: left;
    width: 100%;
}
.banner-index .index-slider-middle{
    width:1200px;
    margin:0 auto;
    position:relative;
    height:0}
.banner-index .index-slider-middle .slider-middle-prev{
    left:204px;
    top:199px;
    background: url(./images/icon01.svg)no-repeat;
    background-position:0 -72px;
}
.banner-index .index-slider-middle .slider-middle-prev:hover{
    background-position:-240px -72px}
.banner-index .index-slider-middle .slider-middle-next{
    left:1132px;
    top:119px;
    background: url(./images/icon01.svg)no-repeat;
    background-position:-80px -72px}
.banner-index .index-slider-middle .slider-middle-next:hover{
    background-position:-160px -72px}
.banner-index .index-slider-middle .slider-middle-nav{
    bottom:auto;
    left:auto;
    right:0;
    top:448px;
    text-align:right;
    position: absolute;
    width: 300px;
}
.banner-index .index-slider-middle .slider-middle-nav span{
    margin-left:7px;
    border-radius: 10px;
    border: 1px solid #fff;
    display: inline-block;
    height: 10px;
    line-height: 10px;
    text-align: center;
    color: #fff;
    width: 10px;
    background-color: transparent;
    cursor: default;
}
.banner-index .index-slider-middle .slider-middle-nav .curent{
    background-color: white;
}
.banner-index .index-slider-middle .slider-middle-prev,.banner-index .index-slider-middle .slider-middle-next{
    margin-top:0;
    width:80px;
    height:80px;
    position:relative;
    display:block!important}
.banner-index .index-slider-middle .slider-middle-prev:before,.banner-index .index-slider-middle .slider-middle-next:before{
    display:none}